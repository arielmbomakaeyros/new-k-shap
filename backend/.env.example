# Server
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/kshap

# JWT - IMPORTANT: Generate proper random secrets (e.g., openssl rand -hex 64)
JWT_SECRET=CHANGE_ME_generate_random_64_hex
JWT_REFRESH_SECRET=CHANGE_ME_generate_different_random_64_hex
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600
USE_REDIS_CACHE=false
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# SMTP Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=K-shap

# AWS S3 - IMPORTANT: Rotate these if they were ever committed to git
AWS_ACCESS_KEY=your-access-key
AWS_SECRET_KEY=your-secret-key
AWS_REGION=eu-central-1
BUCKETNAME=your-bucket-name
S3_ROOT_PREFIX=
